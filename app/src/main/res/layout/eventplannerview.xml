<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="YEP"
        android:fitsSystemWindows="true"/>



    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawer_layout"
        >




        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containerView">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:paddingBottom="10dp">
                    <ImageView
                        android:layout_width="230dp"
                        android:background="@drawable/border"
                        android:layout_height="150dp"
                        android:id="@+id/logo"
                        android:onClick="gotogallery"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="71dp"
                        android:layout_marginStart="71dp" />
                        </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:textSize="18sp"
                        android:text="ORGANISATION NAME"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/organisationname"
                            android:textSize="20sp"
                           android:gravity="center_horizontal" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="NAME"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />

                    <TextView
                            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                            android:id="@+id/name"
                            android:textSize="20sp"
                           android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="PHONE NUMBER"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />

                    <TextView

                            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                           android:textSize="20sp"
                            android:id="@+id/phone"
                            android:gravity="center_horizontal" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="EMAIL"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />

                    <TextView
                            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                            android:textSize="20sp"
                            android:ems="10"
                            android:id="@+id/email"
                            android:layout_gravity="center_horizontal"
                           android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="ADDRESS"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />





                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:id="@+id/address"
                            android:gravity="center_horizontal" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="PASSWORD"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />
                    <TextView
                            android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                            android:textSize="20sp"
                            android:id="@+id/password"
                            android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingTop="2dp"
                        android:textSize="18sp"
                        android:text="Number Of events done"
                        android:background="@drawable/ovalboarder"
                        android:gravity="center_horizontal" />



                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/events"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" />




                </LinearLayout>
            </ScrollView>
        </FrameLayout>



        <android.support.design.widget.NavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/nav_view"
            app:itemTextColor="@color/black"
            app:menu="@menu/eventplannereditingmenu"
            app:headerLayout="@layout/eventplannerseditingnavigationpic"
            android:fitsSystemWindows="true"
            />




    </android.support.v4.widget.DrawerLayout>


</LinearLayout>